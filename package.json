{
	"name": "participatory-system-mapper",
	"version": "1.6.3",
	"description": "Participatory System Mapper, browser app for collaboratively creating system maps",
	"keywords": [
		"social network",
		"participatory",
		"stakeholder",
		"policy analysis"
	],
	"bugs": {
		"email": "n.gilbert@surrey.ac.uk"
	},
	"author": "Nigel Gilbert",
	"repository": {
		"type": "git",
		"url": "https://github.com/micrology/prsm"
	},
	"targets": {
		"default": {
			"engines": {
				"browserslist": "defaults"
			},
			"distDir": "dist",
			"publicUrl": "."
		}
	},
	"scripts": {
		"lint": "./node_modules/.bin/eslint ./js/*.js --fix --quiet",
		"pretty": "prettier --write ./html/*.html ./*.html ./js/*.js ./css/*.css doc/**/*.{html,css} package.json",
		"build-help": "pandoc doc/help.md --metadata title='PRSM Help' -f markdown-markdown_in_html_blocks+raw_html -t html5 -c /doc/help.css -s -A doc/scrollNav.html -H doc/meta.html -B  doc/scrollNavHead.html -o html/help.html && npm run dev",
		"check": "npm run --silent lint && npm run --silent build-help && npm run --silent pretty",
		"dev": "rm -rf dist/* && parcel build './html/*.html' --no-optimize --no-scope-hoist --detailed-report 1",
		"build": "rm -rf dist/* && parcel build './html/*.html'",
		"jsdoc": "npx jsdoc -r ./js -d ./doc/jsdoc",
		"clean": "rm -rf dist/*"
	},
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@egjs/hammerjs": "^2.0.17",
		"@fortawesome/fontawesome-free": "^5.15.2",
		"@jaames/iro": "^5.5.0",
		"@joeattardi/emoji-button": "^4.6.0",
		"@types/quill": "^2.0.6",
		"fast-xml-parser": "^3.17.6",
		"quill": "^1.3.7",
		"uuid": "^8.3.2",
		"vis-data": "^7.1.2",
		"vis-network": "^9.0.2",
		"vis-util": "^5.0.2",
		"y-indexeddb": "^9.0.6",
		"y-protocols": "^1.0.4",
		"y-websocket": "^1.3.11",
		"yjs": "^13.5.0"
	},
	"devDependencies": {
		"@parcel/optimizer-cssnano": "^2.0.0-nightly.608",
		"@parcel/optimizer-htmlnano": "^2.0.0-nightly.608",
		"@parcel/packager-css": "^2.0.0-nightly.608",
		"@parcel/packager-html": "^2.0.0-nightly.608",
		"@parcel/transformer-css": "^2.0.0-nightly.608",
		"@parcel/transformer-html": "^2.0.0-nightly.608",
		"@parcel/transformer-postcss": "^2.0.0-nightly.608",
		"@parcel/transformer-posthtml": "^2.0.0-nightly.608",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^7.2.0",
		"foodoc": "0.0.9",
		"install": "^0.13.0",
		"jsdoc": "^3.6.6",
		"parcel": "^2.0.0-beta.1",
		"postcss": "^8.2.6",
		"prettier": "^2.2.1"
	},
	"private": true
}
