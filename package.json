{
	"name": "participatory-system-mapper",
	"version": "1.9.7",
	"description": "Participatory System Mapper, browser app for collaboratively creating system maps",
	"keywords": [
		"social network",
		"participatory",
		"stakeholder",
		"policy analysis"
	],
	"bugs": {
		"email": "n.gilbert@surrey.ac.uk"
	},
	"author": "Nigel Gilbert",
	"repository": {
		"type": "git",
		"url": "https://github.com/micrology/prsm"
	},
	"targets": {
		"default": {
			"engines": {
				"browserslist": "defaults"
			},
			"distDir": "dist",
			"publicUrl": "."
		}
	},
	"scripts": {
		"lint": "./node_modules/.bin/eslint ./js/*.js --fix --quiet",
		"pretty": "prettier --write ./html/*.html ./*.html ./js/*.js ./css/*.css doc/**/*.{html,css} package.json",
		"build-help": "pandoc doc/help.md --metadata title='PRSM Help' -f markdown-markdown_in_html_blocks+raw_html -t html5 -c /doc/help.css -s -A doc/scrollNav.html -H doc/meta.html -B  doc/scrollNavHead.html -o html/help.html && npm run dev",
		"check": "npm run --silent lint && npm run --silent build-help && npm run --silent pretty",
		"dev": "rm -rf dist/* && parcel build './html/*.html' --no-optimize --no-scope-hoist",
		"build": "rm -rf dist/* && parcel build './html/*.html'",
		"jsdoc": "npx jsdoc -r -c .jsdoc.json",
		"clean": "rm -rf dist/*"
	},
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"@egjs/hammerjs": "^2.0.17",
		"@jaames/iro": "^5.5.2",
		"@joeattardi/emoji-button": "^4.6.2",
		"@types/quill": "^2.0.9",
		"aframe": "^1.3.0",
		"aframe-blink-controls": "^0.3.0",
		"aframe-extras": "^6.1.1",
		"aframe-forcegraph-component": "^3.0.4",
		"aframe-look-at-component": "^1.0.0",
		"aframe-teleport-controls": "^0.3.1",
		"3d-force-graph": "^1.70.5",
		"3d-force-graph-vr": "^2.0.12",
		"fast-xml-parser": "^4.0.0",
		"lz-string": "^1.4.4",
		"quill": "^1.3.7",
		"quill-delta-to-html": "^0.12.0",
		"scrollnav": "^3.0.2",
		"tabulator-tables": "^5.1.0",
		"three-spritetext": "^1.6.4",
		"uniqolor": "^1.0.1",
		"uuid": "^8.3.2",
		"vis-data": "^7.1.2",
		"vis-network": "^9.0.5",
		"vis-util": "^5.0.2",
		"y-indexeddb": "^9.0.6",
		"y-protocols": "^1.0.5",
		"y-websocket": "^1.3.16",
		"yjs": "^13.5.11"
	},
	"devDependencies": {
		"@parcel/transformer-image": "latest",
		"docdash": "^1.2.0",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^8.3.0",
		"jsdoc": "^3.6.7",
		"microdiff": "^1.1.3",
		"parcel": "latest",
		"prettier": "^2.3.2"
	},
	"private": true
}
